<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title" />

    <RelativeLayout
        android:id="@+id/changePassword"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/oldpassword"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/loginrect"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:maxLength="22"
            android:paddingLeft="10dp"
            android:textColor="@color/TextColor"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/changePasswordnew"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_below="@id/changePassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/newpassword"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/loginrect"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:maxLength="22"
            android:paddingLeft="10dp"
            android:textColor="@color/TextColor"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/changePasswordnew1"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_below="@id/changePasswordnew"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/newpassword2"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/loginrect"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:maxLength="22"
            android:paddingLeft="10dp"
            android:textColor="@color/TextColor"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/changecodetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/changePasswordnew1"
        android:layout_below="@+id/changePasswordnew1"
        android:layout_marginTop="5dp"
        android:text="*密码为6-22位字符"
        android:textColor="@color/TextLittleColor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/changecodetitle"
        android:layout_below="@id/changecodetitle"
        android:text="*两次密码输入不一致"
        android:textColor="#E91E63"
        android:textSize="12sp"
        android:visibility="gone"></TextView>

    <Button
        android:id="@+id/send"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_below="@id/changePasswordnew1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/corner4"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp"></Button>

</RelativeLayout>