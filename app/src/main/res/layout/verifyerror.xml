<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_edit_text"
    android:layout_gravity="center" >

    <TextView android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/exit_dlg_bg"
        android:text="温馨提示"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        android:gravity="center"
        />

    <TextView android:id="@+id/add_blog_alertdlg_title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="验证码输入错误"
        android:gravity="center"
        android:textColor="#ff4a4a4a"
        android:textSize="16sp"/>

    <View android:layout_width="300dp"
        android:layout_height="1px"
        android:background="#ffe1e1e1"/>

    <LinearLayout android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/exit_dlg_bg_down"
        >

        <TextView android:id="@+id/add_blog_alertdlg_ok"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="#ff21baaa"
            android:gravity="center"
            />



    </LinearLayout>

</LinearLayout>
