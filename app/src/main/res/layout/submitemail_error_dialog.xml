<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_edit_text"
    android:orientation="vertical">

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/exit_dlg_bg"
        android:gravity="center"
        android:text="温馨提示"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/add_blog_alertdlg_title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="该邮箱未被绑定过"
        android:textColor="#ff4a4a4a"
        android:textSize="16sp" />

    <View
        android:layout_width="300dp"
        android:layout_height="1px"
        android:background="#ffe1e1e1" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/exit_dlg_bg_down"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_blog_alertdlg_ok"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ff21baaa"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>
